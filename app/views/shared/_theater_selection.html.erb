<% @outing.get_theaters.each do |theater|  %>
<div class='theater' data-theater-id='<%= theater.id %>'>
  <h1><%= theater.name %></h1>
  <% @theater_selections = @outing.selections.where(:theater_id => theater.id) %>
  <ul>
    <% @outing.get_movies.each do |movie|  %>
      <% @theater_movies = @theater_selections.where(movie_id: movie.id) %>
      <% unless @theater_movies.empty? %>
        <li class='movie' data-movie-id='<%= movie.id %>'><h6><%= movie.display_title %></h6>
          <ul>
          <% @theater_movies.reverse.each do |selection| %>
            <li data-selection-id='<%= selection.id %>'><%= check_box_tag(selection.movie.title, 
            [movie_id: selection.movie_id, 
             showtime_id: selection.showtime.id, 
             time: selection.time, 
             theater_id: selection.theater_id,
             outing_id: @outing.id],
             checked = false, name: "selections[#{selection.movie.title}_#{selection.id}]") %><%=display_time selection.time %></li>
          <% end %>
        </ul>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
<% end %>
