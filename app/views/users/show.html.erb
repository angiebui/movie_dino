<div class='profile-container'>
  <div class='profile'>
    <h2>Events you've created</h2>

    <% @outings.each do |outing|%>
      <h3>Outing on <%= outing[:info].created_at.to_date.to_formatted_s(:long_ordinal) %></h3>
      <h5>Total Responses: <%= outing[:total_responses] %></h5>
      <div>
        <ul>
          <h5>Movie</h5>
          <% outing[:selections].each do |selection| %>
            <li> <%= selection[:movie].title.upcase %> </li>
          <% end %>
        </ul>
      </div>
      <div>
        <ul>
          <h5>Theater</h5>
          <% outing[:selections].each do |selection| %>
            <li> <%= selection[:theater].name %> </li>
          <% end %>
        </ul>
      </div>

      <div>
        <ul>
          <h5>Showtime</h5>
          <% outing[:selections].each do |selection| %>
            <li> <%= display_time(selection[:showtime]) %> </li>
          <% end %>
        </ul>
      </div>

      <div>
        <ul>
          <h5>Number of Attendees</h5>
          <% outing[:selections].each do |selection| %>
            <li> <%= selection[:attendees_num] %> </li>
          <% end %>
        </ul>
      </div>

    <% end %>
  </div>
</div>
