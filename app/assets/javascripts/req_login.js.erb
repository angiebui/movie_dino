function remindUserToLogin(){
  $('#login-errors').html('You must <a href="/auth/facebook" id="sign_in" rel="external">login</a> to create an event!');
}

$(document).ready(function(){
  $('#new_outing').on('submit', function(event){
    var current_user = $('#current_user').text();
    if(current_user == ""){
      event.preventDefault()
      remindUserToLogin();
    }
  });
})
